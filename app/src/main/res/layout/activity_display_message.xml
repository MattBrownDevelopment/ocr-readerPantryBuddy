<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.google.android.gms.samples.vision.ocrreader.DisplayMessageActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/edit_text_item1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_below="@+id/edit_text_item1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/edit_text_item2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_below="@+id/edit_text_item2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/edit_text_item3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:layout_below="@+id/edit_text_item3"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/edit_text_item4" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_item4"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="11dp"
        android:id="@+id/button_submit"
        android:onClick="submitList"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_submit"
        android:layout_marginStart="113dp"
        android:id="@+id/itemQty1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/itemQty2"
        android:layout_toEndOf="@+id/edit_text_item1"
        android:layout_alignStart="@+id/itemQty1"
        android:layout_above="@+id/edit_text_item3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/edit_text_item2"
        android:layout_alignParentEnd="true"
        android:id="@+id/itemQty3"
        android:layout_alignStart="@+id/itemQty2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_alignBottom="@+id/edit_text_item4"
        android:layout_alignParentEnd="true"
        android:id="@+id/itemQty4"
        android:layout_alignStart="@+id/itemQty3" />

    <Button
        android:text="Delete DB (TEST ONLY)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_submit"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="26dp"
        android:id="@+id/button"
        android:onClick="deleteDB"/>
</RelativeLayout>